@model IEnumerable<Catabase.Models.PostAttribution>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Post.PostId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cat.CatId)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Post.Caption)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cat.Name)
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PostAttributionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PostAttributionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PostAttributionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
